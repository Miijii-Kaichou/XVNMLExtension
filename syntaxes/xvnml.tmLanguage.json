{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "XVNML",
	"contributes":{
		"languages": [
			{
				"id": "xvnml",
				"extensions": [".xvnml"]
			}
		]
	},
	"scopeName": "source.xvnml",
	"patterns": [
		{
			"begin": "(<\\?)\\s*([-_a-zA-Z0-9]+)",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"2": {
					"name": "entity.name.tag.xvnml"
				}
			},
			"end": "(\\?>)",
			"name": "meta.tag.preprocessor.xvnml",
			"patterns": [
				{
					"match": " ([a-zA-Z-]+)",
					"name": "entity.other.attribute-name.xvnml"
				},
				{
					"include": "#doublequotedString"
				},
				{
					"include": "#singlequotedString"
				},
				{
					"include": "#eventTriggers"
				}
			]
		},
		{
			"include": "#comments"
		},
		{
			"begin": "(<)((?:([-_a-zA-Z0-9]+)(::))?([-_a-zA-Z0-9:]+))(?::(\\s[^>]*)?></\\2>)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"2": {
					"name": "entity.name.tag.xvnml"
				},
				"3": {
					"name": "entity.name.tag.namespace.xvnml"
				},
				"4": {
					"name": "punctuation.separator.namespace.xvnml"
				},
				"5": {
					"name": "entity.name.tag.localname.xvnml"
				}
			},
			"end": "(>)(</)((?:([-_a-zA-Z0-9]+)(::))?([-_a-zA-Z0-9:]+))(>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"2": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"3": {
					"name": "entity.name.tag.xvnml"
				},
				"4": {
					"name": "entity.name.tag.namespace.xvnml"
				},
				"5": {
					"name": "punctuation.separator.namespace.xvnml"
				},
				"6": {
					"name": "entity.name.tag.localname.xvnml"
				},
				"7": {
					"name": "punctuation.definition.tag.xvnml"
				}
			},
			"name": "meta.tag.no-content.xvnml",
			"patterns": [
				{
					"include": "#tagStuff"
				},
				{
					"include": "#eventTriggers"
				}
			]
		},
		{
			"begin": "(</?)(?:([-\\w\\.]+)((::)))?([-\\w\\.:]+)",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"2": {
					"name": "entity.name.tag.namespace.xvnml"
				},
				"3": {
					"name": "entity.name.tag.xvnml"
				},
				"4": {
					"name": "punctuation.separator.namespace.xvnml"
				},
				"5": {
					"name": "entity.name.tag.localname.xvnml"
				}
			},
			"end": "(/?>)",
			"name": "meta.tag.xvnml",
			"patterns": [
				{
					"include": "#tagStuff"
				},
				{
					"include": "#eventTriggers"
				},
				{
					"include": "#reference"
				}
			]
		},
		{
			"include": "#entity"
		},
		{
			"include": "#bare-ampersand"
		},
		{
			"begin": "<%@",
			"beginCaptures": {
				"0": {
					"name": "punctuation.section.embedded.begin.xvnml"
				}
			},
			"end": "%>",
			"endCaptures": {
				"0": {
					"name": "punctuation.section.embedded.end.xvnml"
				}
			},
			"name": "source.java-props.embedded.xml",
			"patterns": [
				{
					"match": "page|include|taglib",
					"name": "keyword.other.page-props.xvnml"
				}
			]
		},
		{
			"begin": "<%[!=]?(?!--)",
			"beginCaptures": {
				"0": {
					"name": "punctuation.section.embedded.begin.xvnml"
				}
			},
			"end": "(?!--)%>",
			"endCaptures": {
				"0": {
					"name": "punctuation.section.embedded.end.xvnml"
				}
			},
			"name": "source.java.embedded.xvnml",
			"patterns": [
				{
					"include": "source.java"
				}
			]
		},
		{
			"begin": "<!\\[CDATA\\[",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xvnml"
				}
			},
			"end": "]]>",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xvnml"
				}
			},
			"name": "string.unquoted.cdata.xvnml"
		},
		{
			"include": "#speechLine"
		},
		{
			"include": "#promptLine"
		},
		{
			"include": "#tuple"
		},
		{
			"include": "#prompt"
		}
	],
	"repository": {
		"EntityDecl": {
			"begin": "(<!)(ENTITY)\\s+(%\\s+)?([:a-zA-Z_][:a-zA-Z0-9_.-]*)(\\s+(?:SYSTEM|PUBLIC)\\s+)?",
			"captures": {
				"1": {
					"name": "punctuation.definition.tag.xvnml"
				},
				"2": {
					"name": "keyword.other.entity.xvnml"
				},
				"3": {
					"name": "punctuation.definition.entity.xvnml"
				},
				"4": {
					"name": "variable.language.entity.xvnml"
				},
				"5": {
					"name": "keyword.other.entitytype.xvnml"
				}
			},
			"end": "(>)",
			"patterns": [
				{
					"include": "#doublequotedString"
				},
				{
					"include": "#singlequotedString"
				}
			]
		},
		"eventTriggers":{
			"begin": "\\{!?",
			"end": "\\}",
			"patterns": [
				{
					"match": "([_a-zA-Z0-9]+)",
					"name": "entity.name.tag.localname.xvnml"
				},
				{
					"match": "(::)|(\\|)|(\\,)",
					"name": "punctuation.definition.tag.xvnml"
				},
				{
					"match": "([\"'_a-zA-Z0-9]+)",
					"name": "entity.name.tag.localname.xvnml"
				}
			],
			"name": "entity.name.tag.localname.xvnml"
		},
		"prompt":{
			"begin": "\\(!?",
			"end": "(\\)\\>)",
			"patterns": [
				{
					"include": "#doublequotedString"
				}
			]
		},
		"tuple":{
			"begin": "\\{!?",
			"end": "\\}",
			"patterns": [
				{
					"match": "([\"\\'-_a-zA-Z0-9]+)",
					"name": "entity.name.tag.localname.xvnml"
				},
				{
					"match": "(\\,)",
					"name": "punctuation.definition.tag.xvnml"
				}
			]
		},
		"reference":{
			"patterns": [
				{
					"match": "\\$([a-zA-Z0-9_-]+)",
					"name": "constant.character.entity.xvnml"
				}
			]
		},
		"speechLine": {
			"begin": "\\@(([a-zA-Z0-9-_\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]*)((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?(\\*((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?(\\?{3}((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xvnml"
				}
			},
			"end": "\\<{1,2}",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xvnml"
				}
			},
			"patterns": [
				{
					"match": "(\\>+)",
					"name": "punctuation.definition.string.end.xvnml"
				},
				{
					"match": "([a-zA-Z0-9-_!\\(\\)\\%.,\\$\\#\\:\"\\?\\@'\\[\\]]+|(\\\\{?)|(\\\\}?))",
					"name": "punctuation.definition.tag.xvnml"
				},
				{
					"match": "([\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A\u3000-\u303F\uFF01-\uFF5E])",
					"name": "punctuation.definition.tag.xvnml"
				},
				{
					"include": "#eventTriggers"
				},
				{
					"include": "#prompt"
				}
			]
		},
		"promptLine":{
			"begin": "\\?(([a-zA-Z0-9-_\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]*)((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?(\\*((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?(\\?{3}((\\>((E::|V::)*))([-_a-zA-Z0-9\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A]+)?){0,2}\\w*)?",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xvnml"
				}
			},
			"end": "\\>\\>",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xvnml"
				}
			},
			"patterns": [
				{
					"match": "(\\>+)",
					"name": "punctuation.definition.string.end.xvnml"
				},
				{
					"match": "([a-zA-Z0-9-_!\\(\\)\\%.,\\$\\#\\:\"\\?\\@'\\[\\]]+|(\\\\{?)|(\\\\}?))",
					"name": "punctuation.definition.tag.xvnml"
				},
				{
					"match": "([\u3041-\u3096\u30A0-\u30FF\u3400-\u4DB5\u4E00-\u9FCB\uF900-\uFA6A\u3000-\u303F\uFF01-\uFF5E])",
					"name": "punctuation.definition.tag.xvnml"
				},
				{
					"include": "#eventTriggers"
				}
			]
		},
		"bare-ampersand": {
			"match": "&",
			"name": "invalid.illegal.bad-ampersand.xvnml"
		},
		"doublequotedString": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xvnml"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xvnml"
				}
			},
			"name": "string.quoted.double.xvnml",
			"patterns": [
				{
					"include": "#entity"
				},
				{
					"include": "#bare-ampersand"
				}
			]
		},
		"entity": {
			"captures": {
				"1": {
					"name": "punctuation.definition.constant.xvnml"
				},
				"3": {
					"name": "punctuation.definition.constant.xvnml"
				}
			},
			"match": "(&)([:a-zA-Z_][:a-zA-Z0-9_.-]*|#[0-9]+|#x[0-9a-fA-F]+)(|)",
			"name": "constant.character.entity.xvnml"
		},
		"internalSubset": {
			"begin": "(\\[)",
			"captures": {
				"1": {
					"name": "punctuation.definition.constant.xvnml"
				}
			},
			"end": "(\\])",
			"name": "meta.internalsubset.xvnml",
			"patterns": [
				{
					"include": "#EntityDecl"
				},
				{
					"include": "#parameterEntity"
				},
				{
					"include": "#comments"
				}
			]
		},
		"parameterEntity": {
			"captures": {
				"1": {
					"name": "punctuation.definition.constant.xvnml"
				},
				"3": {
					"name": "punctuation.definition.constant.xvnml"
				}
			},
			"match": "(%)([:a-zA-Z_][:a-zA-Z0-9_.-]*)(|)",
			"name": "constant.character.parameter-entity.xvnml"
		},
		"singlequotedString": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xvnml"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xvnml"
				}
			},
			"name": "string.quoted.single.xvnml",
			"patterns": [
				{
					"include": "#entity"
				},
				{
					"include": "#bare-ampersand"
				}
			]
		},
		"tagStuff": {
			"patterns": [
				{
					"captures": {
						"1": {
							"name": "entity.other.attribute-name.namespace.xvnml"
						},
						"2": {
							"name": "entity.other.attribute-name.xvnml"
						},
						"3": {
							"name": "punctuation.separator.namespace.xvnml"
						},
						"4": {
							"name": "entity.other.attribute-name.localname.xvnml"
						}
					},
					"match": "(?:^|\\s+)(?:([-\\w.]+)((::)))?([-\\w.:]+)\\s*::"
				},
				{
					"include": "#doublequotedString"
				},
				{
					"include": "#singlequotedString"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "\\$\\>",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.xml"
						}
					},
					"end": "\n",
					"name": "comment.block.xvnml"
				},
				{
					"begin": "\\$/",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.xvnml"
						}
					},
					"end": "/\\$",
					"name": "comment.block.xml"
				}
			]
		}
	}
}